@model Login

    <style>
        p {
            font-family: Cambria;
            font-size: 60px;
            font-weight: bold;
            margin-top: 20px;
            margin-left:670px;
            line-height: 45%;
        }

        h5 {
            font-family: Cambria;
            font-weight: bold;
            font-size: 20px;
            margin-bottom: 130px;
        }

        .container {
            padding: 16px;
        }
    </style>

    <div class=" ">
        <p>LYCEUM</p>
        <p>OF</p>
        <p>ALABANG</p>
        <h5 style="margin-left:670px;">PORTAL</h5>
        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="row" style="margin-left:500px; margin-bottom:-100px; ">
            <div class="col-5 offset-3">
                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Enter Email Address" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                    </div>
                    <button class="btn btn-primary" type="submit">Log In</button>
                </form>
            </div>
        </div>

    </div>
